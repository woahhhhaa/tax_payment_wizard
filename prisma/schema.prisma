generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentTaskStatus {
  DRAFT
  SENT
  VIEWED
  CONFIRMED
  VERIFIED
  OVERDUE
  CANCELLED
}

enum PortalLinkScope {
  PLAN
  PAYMENT
}

enum PaymentEventActorType {
  CLIENT
  STAFF
  SYSTEM
}

enum KarbonSyncStatus {
  NOT_LINKED
  LINKED
  ERROR
}

enum KarbonObjectType {
  CLIENT
  PAYMENT
  PLAN
}

enum NotificationStatus {
  QUEUED
  SENT
  FAILED
}

enum NotificationChannel {
  EMAIL
  SMS
}

enum BatchKind {
  WIZARD
  PLAN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clients         Client[]
  batches         Batch[]
  runs            Run[]
  payments        Payment[]
  portalLinks     PortalLink[]
  paymentEvents   PaymentConfirmationEvent[]
  karbonMappings  KarbonMapping[]
  notificationLogs NotificationLog[]
}

model Client {
  id             String   @id @default(uuid())
  userId         String
  wizardClientId String?
  name           String?
  addresseeName  String?
  primaryEmail   String?
  entityType     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user             User             @relation(fields: [userId], references: [id])
  runs             Run[]
  portalLinks      PortalLink[]
  notificationLogs NotificationLog[]

  @@unique([userId, wizardClientId])
  @@index([userId, updatedAt])
}

model Batch {
  id           String   @id @default(uuid())
  userId       String
  name         String
  kind         BatchKind @default(WIZARD)
  snapshotJson Json     @db.JsonB
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  runs Run[]

  @@index([userId, updatedAt])
  @@index([userId, kind, updatedAt])
}

model Run {
  id           String   @id @default(uuid())
  userId       String
  batchId      String
  clientId     String
  snapshotJson Json     @db.JsonB
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id])
  batch       Batch       @relation(fields: [batchId], references: [id])
  client      Client      @relation(fields: [clientId], references: [id])
  payments    Payment[]
  portalLinks PortalLink[]

  @@unique([batchId, clientId])
  @@index([userId, updatedAt])
}

model Payment {
  id          String   @id @default(uuid())
  userId      String
  runId       String
  scope       String
  stateCode   String?
  paymentType String
  quarter     Int?
  dueDate     DateTime?
  amount      Decimal? @db.Decimal(12, 2)
  taxYear     Int?
  notes       String?
  method      String?
  sortOrder   Int?
  status      PaymentTaskStatus @default(DRAFT)
  confirmedAt DateTime?
  confirmedByEmail String?
  confirmedAmount Decimal? @db.Decimal(12, 2)
  confirmedDate DateTime?
  confirmationNumber String?
  confirmationNote String?
  proofFileId String?
  verifiedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user             User                         @relation(fields: [userId], references: [id])
  run              Run                          @relation(fields: [runId], references: [id])
  portalLinks      PortalLink[]
  confirmationEvents PaymentConfirmationEvent[]
  notificationLogs NotificationLog[]

  @@index([userId, dueDate])
}

model State {
  code String @id
  name String @unique
}

model PortalLink {
  id        String          @id @default(uuid())
  userId    String
  clientId  String
  runId     String?
  paymentId String?
  scope     PortalLinkScope
  tokenHash String          @unique
  expiresAt DateTime?
  lastUsedAt DateTime?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user             User             @relation(fields: [userId], references: [id])
  client           Client           @relation(fields: [clientId], references: [id])
  run              Run?             @relation(fields: [runId], references: [id])
  payment          Payment?         @relation(fields: [paymentId], references: [id])
  notificationLogs NotificationLog[]

  @@index([userId, clientId])
  @@index([userId, runId])
  @@index([userId, paymentId])
}

model PaymentConfirmationEvent {
  id        String                @id @default(uuid())
  userId    String
  paymentId String
  eventType String
  actorType PaymentEventActorType
  actorEmail String?
  metadata  Json?                 @db.JsonB
  createdAt DateTime              @default(now())

  user    User    @relation(fields: [userId], references: [id])
  payment Payment @relation(fields: [paymentId], references: [id])

  @@index([userId, createdAt])
  @@index([paymentId, createdAt])
}

model KarbonMapping {
  id          String           @id @default(uuid())
  userId      String
  objectType  KarbonObjectType
  localId     String
  karbonKey   String?
  status      KarbonSyncStatus @default(NOT_LINKED)
  errorMessage String?
  lastSyncAt  DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, objectType, localId])
  @@index([userId, status])
}

model NotificationLog {
  id                String              @id @default(uuid())
  userId            String
  clientId          String?
  paymentId         String?
  portalLinkId      String?
  messageType       String
  channel           NotificationChannel
  recipient         String
  providerMessageId String?
  status            NotificationStatus  @default(QUEUED)
  sendAt            DateTime?
  sentAt            DateTime?
  errorMessage      String?
  metadata          Json?               @db.JsonB
  createdAt         DateTime            @default(now())

  user       User       @relation(fields: [userId], references: [id])
  client     Client?    @relation(fields: [clientId], references: [id])
  payment    Payment?   @relation(fields: [paymentId], references: [id])
  portalLink PortalLink? @relation(fields: [portalLinkId], references: [id])

  @@index([userId, createdAt])
  @@index([clientId, createdAt])
  @@index([paymentId, createdAt])
  @@index([status, sendAt])
}
