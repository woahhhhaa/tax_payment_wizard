generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clients  Client[]
  batches  Batch[]
  runs     Run[]
  payments Payment[]
}

model Client {
  id             String   @id @default(uuid())
  userId         String
  wizardClientId String?
  name           String?
  addresseeName  String?
  entityType     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  runs Run[]

  @@unique([userId, wizardClientId])
  @@index([userId, updatedAt])
}

model Batch {
  id           String   @id @default(uuid())
  userId       String
  name         String
  snapshotJson Json     @db.JsonB
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  runs Run[]

  @@index([userId, updatedAt])
}

model Run {
  id           String   @id @default(uuid())
  userId       String
  batchId      String
  clientId     String
  snapshotJson Json     @db.JsonB
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  batch  Batch  @relation(fields: [batchId], references: [id])
  client Client @relation(fields: [clientId], references: [id])
  payments Payment[]

  @@unique([batchId, clientId])
  @@index([userId, updatedAt])
}

model Payment {
  id          String   @id @default(uuid())
  userId      String
  runId       String
  scope       String
  stateCode   String?
  paymentType String
  quarter     Int?
  dueDate     DateTime?
  amount      Decimal? @db.Decimal(12, 2)
  taxYear     Int?
  notes       String?
  method      String?
  sortOrder   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  run  Run  @relation(fields: [runId], references: [id])

  @@index([userId, dueDate])
}

model State {
  code String @id
  name String @unique
}
